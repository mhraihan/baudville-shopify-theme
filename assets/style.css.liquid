@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;700&display=swap');

body {
    font-family: 'Montserrat', sans-serif;
    color: #6a747c;
}

h1, h2, h3, h4, h5, h6, .main-menu, .footer-top button[type=submit], .heading-font {
    font-family: 'Bebas Neue', cursive;
}

body a {
    color: #6fae9f;
}


body .container {
    margin: 0 auto;
    max-width: 1200px;
}

.header-top {
    background-color: #6a747c;
}
.main-menu li a {
    color: #6a747c;
}

.secondary-color {
    color: #fe715e;
}
.primary-bg {
    background-color: #6fae9f;
}

.primary-color, .main-menu li:hover > a, a {
    color: #6fae9f;
}

.primary-border-color {
    border-color: #9ec9bf;
}

.social-icons svg {
    fill: #fff;
    height: 20px;
    width: 20px;
}

.header-top-menu a {
    border-right: 1px solid;
    padding-right: 10px;
    margin-right: 10px;
}

.header-top-menu li:last-child a {
    border: none;
    padding-right: 0;
    margin-right: 0;
}


.footer-bg {
    background-color: #cee1dc;
}

.footer-bg , .footer-bg a {
    color: #6a747c;
}
.footer-top h3{font-size: 18px;margin-bottom: 15px;}
.footer-top li a {display: inline-block; padding: 5px 0}

.footer-top button[type=submit] {
    background-color: #fe715e;
    color: #fff;
    padding: 10px 20px;
    text-transform: uppercase;
    border-radius: 5px;
    border: 1px solid #fff;
    font-size: 18px;
}

.social-icons a {
    height: 35px;
    width: 35px;
    background-color: #6fae9f;
    margin: 0 10px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.seal-logos img {
    max-height: 70px;
    max-width: 87px;
    margin: 0 11px;
}

.footer-brands {
    background-color: #6fae9f;
}


.footer-brands img {
    max-width: 115px;
    margin: 0 20px;
}

.pink-bg {
    background-color: #ffe2e0;
    color: #ff715e;
}

.pink-cta-text h2 {
    color: #ff715e;
    font-family: Playfair display, sans-serif;
}
.pink-cta-text a {
    font-weight: 700;
}

.header-top a {color:#fff}