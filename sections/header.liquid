<div class="text-sm text-white header-top-bg header-top">
  <div class="container">
    <div class="flex items-center -mx-4">
      <div class="w-3/12 px-4">
        <a href="" class="flex text-white">
          {% render 'icon-phone' %}

          1-800-728-0888
        </a>
      </div>
      <div class="w-6/12 px-4 py-2 text-center">
        <p>It's never too early to start crossing gifts off your list!</p>
        <a class="underline uppercase" href="https://www.baudville.com/categories/holiday-gifts-shop-all-holiday">SHOP HOLIDAY</a>
      </div>

      <div class="w-3/12 px-4 text-right">
        <ul class="flex justify-end header-top-menu">
          {% for link in linklists.main-menu.links %}
            <li>{{ link.title | link_to: link.url }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="py-4 border-b-2">
  <div class="container">
    <div class="flex items-center -mx-4">
      <div class="w-3/12 px-4">
        <a href="{{ shop.url }}">
          <img width="170" src="{{ 'logo.static.png' | asset_url }}" alt="">
        </a>
      </div>
      <div class="w-6/12 px-4">
        <div class="pr-2 text-sm bg-gray-200 rounded">
          <form action="{{ routes.search_url }}" class="flex mb-0">
            <input class="w-full h-10 p-4 bg-transparent" type="text" placeholder="Search" name="q" value="{{ search.terms | escape }}">
            <button class="min-w-max" type="submit">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
              </svg>
            </button>
          </form>
        </div>
      </div>
      <div class="w-3/12 px-4">
        <div class="flex items-center justify-end">
          <div class="relative inline-block dropdown w-50">
            <button class="inline-flex items-center px-4 py-2 text-xs font-semibold text-gray-700">
              <span class="mr-1">My Account</span>
              <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
              </svg>
            </button>
            <ul class="absolute hidden pt-1 text-gray-700 bg-white dropdown-menu">
              {%- if customer -%}
                <li class="">
                  <a class="block px-4 py-2 text-xs whitespace-no-wrap rounded-t hover:text-gray-400" href="{{ routes.account_url }}">My Account</a>
                </li>
                <li class="">
                  <a class="block px-4 py-2 text-xs whitespace-no-wrap rounded-t hover:text-gray-400" href="{{ routes.account_logout_url }}">Logout</a>
                </li>
              {%- else -%}
                <li class="">
                  <a class="block px-4 py-2 text-xs whitespace-no-wrap rounded-t hover:text-gray-400" href="{{ routes.account_login_url }}">Login</a>
                </li>
                <li class="">
                  <a class="block px-4 py-2 text-xs whitespace-no-wrap rounded-t hover:text-gray-400" href="{{ routes.account_register_url }}">Logout</a>
                </li>
              {%- endif -%}

            </ul>
          </div>
          <div class="relative inline-block w-50 cart__link">
            <a accesskey="Y" class="relative block h-10 my-2 text-gray-100 border-l border-l-gray-200 font-sm border-l-solid" href="{{ routes.cart_url }}">
              <div class="absolute w-full text-center -translate-x-2/4 left-2/4 top-2/4 page-header__cell-content page-header__cell-content--cart -translate-y-2/4">
                <div class="relative inline-block mr-3 page-header__cart" id="cart_link">
                  {% render 'icon-cart' %}
                  <span class="absolute inline-block w-4 h-4 text-center text-white border border-white page-header__cart-count -top-2 -right-2 bg-red-50">
                    {{ cart.item_count }}
                  </span>
                </div>
                <span class="inline-block text-xs font-bold page-header__cell-text page-header__cell-text--cart">
                  My Cart
                </span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

