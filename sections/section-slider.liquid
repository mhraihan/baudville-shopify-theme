<div class="py-{{ section.settings.py }}">
  <div class="swiper product-images-swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
          <div class="relative fullwidth-banner ">
            {% assign image = block.settings.image %}
            {% render 'image', image: image, url: block.settings.url %}
          </div>
        </div>
      {%- endfor -%}
    </div>
    <!-- If we need pagination -->
    {%- comment -%}
      <div class="swiper-pagination"></div>
    {%- endcomment -%}
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

{% schema %}
  {
    "name": "Slider",
    "class": "shopify-slider",
    "max_blocks": 20,
    "settings": [
      {
        "type": "header",
        "content": "Adjust padding"
      }, {
        "type": "range",
        "label": "Padding Top/Botom",
        "id": "py",
        "min": 0,
        "max": 96,
        "step": 1,
        "default": 0
      }

    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:common.image"
          }, {
            "type": "url",
            "id": "url",
            "label": "Image Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}