{% assign collection = collections[block.settings.collection] %}
{% assign image = block.settings.image | default: collection.products.first.featured_image | default: collection.featured_image %}

<div class="w-full px-6 md:w-1/3 mb-6 md:mb-0">
  <a href="{{ collection.url }}" class="relative block">
    <img class="mb-1" src="{{ image | image_url }}" alt="{{ collection.title | escape }}" loading="lazy">
    <div class="p-2 text-center text-white bg-green-100 rounded-b rounded-l">
      <h4 class="text-2xl">
        {{ block.settings.title | default: collection.title | escape }}</h4>
      <h3 class="flex justify-center text-xl">
        Shop now
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2 fill-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
      </h3>
    </div>
  </a>
</div>