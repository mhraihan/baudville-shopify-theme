{% if image %}
  {% if url != blank %}
    <a href="{{ url }}" class="absolute top-0 left-0 w-full h-full"></a>
  {% endif %}
  <img src="{{ image | image_url }}" alt="{{ image.alt }}" loading="lazy" class="block mx-auto">
  {%- comment -%}
    <img
    sizes="
        (min-width: 768px) 1000px,
        (min-width: 640px) 500px,
        600px
    "
    srcset="
        {{ image | img_url: '400x' }} 400w,
        {{ image | img_url: '500x' }} 500w,
        {{ image | img_url: '600x' }} 600w,
        {{ image | img_url: '700x' }} 700w,
        {{ image | img_url: '850x' }} 850w,
        {{ image | img_url: '1000x' }} 1000w
    "
    src="{{ image | img_url: '1000x' }}"
    alt="{{ image.alt }}"
    loading="lazy"
    class="object-cover object-center w-full h-full"
>
  {%- endcomment -%}
{% else %}
  {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full' }}
{% endif %}