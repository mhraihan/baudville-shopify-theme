<div class="w-1/3 px-6">
  <a href="{{ product_card.url | within: collection }}" class="relative block">
    <img class="mb-1" 
        sizes="(min-width: 768px) 450px,630px" 
        srcset="{{ product_card.featured_image.src | img_url: '450x' }} 450w,
                {{ product_card.featured_image.src | img_url: '630x' }} 630w" 
        src="{{ product_card.featured_image.src | img_url: '630x' }}" 
        alt="{{ product_card.featured_image.alt | escape }}" loading="lazy"
    >
    <div class="p-2 text-center text-white rounded-b rounded-l bg-green-100">
      <h4 class="text-2xl">
        {{ product_card.title }}</h4>
      <h3 class="flex justify-center text-xl">
        Shop now
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2 fill-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
      </h3>
    </div>
  </a>
</div>