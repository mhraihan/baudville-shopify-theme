<div class="w-full">
  <a href="{{ product_card.url | within: collection }}" class="relative block">
    <img class="mb-1" src="{{ product_card.featured_image.src | image_url }}" alt="{{ product_card.featured_image.alt | escape }}" loading="lazy">
    <div class="p-2 text-center text-white bg-green-100 rounded-b rounded-l">
      <h4 class="text-2xl">
        {{ product_card.title }}</h4>
      <h3 class="flex justify-center text-xl">
        Shop now
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2 fill-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
      </h3>
    </div>
  </a>
</div>